<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/group_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/group_title"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/group_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/group_description"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/group_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/group_date_and_time"
        android:textSize="12sp"
        android:textColor="#808080" />

<!--    <TextView-->
<!--        android:id="@+id/group_distance"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="@string/group_distance"-->
<!--        android:textSize="12sp"-->
<!--        android:textColor="#808080" />-->

    <TextView
        android:id="@+id/group_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/group_location"
        android:textSize="12sp"
        android:textColor="#808080" />

</LinearLayout>
